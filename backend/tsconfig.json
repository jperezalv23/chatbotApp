{
  "compilerOptions": {
    "target": "ES6",                          // Output ES6 JavaScript
    "module": "CommonJS",                    // Required for Node.js
    "outDir": "dist",                        // Compiled .js files go here
    "rootDir": "src",                        // Your .ts files live here
    "strict": true,                          // Enable all strict type-checking
    "esModuleInterop": true,                 // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
